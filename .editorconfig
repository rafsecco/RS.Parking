root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.{ts,js}]
quote_type = single

[*.{html,cshtml,cs,css,js,txt}]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space